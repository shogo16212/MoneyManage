<Window x:Class="MoneyManage.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyManage"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource Default}"
        Title="StatisticsWindow" Height="700" Width="1200"
        xmlns:wfc="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        
        <WindowsFormsHost Grid.Row="0" Grid.ColumnSpan="2">
            <wfc:Chart x:Name="columnChart"/>
        </WindowsFormsHost>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5" Grid.Row="1" Grid.ColumnSpan="2">
            <TextBlock Text="対象ユーザー："/>
            <ComboBox Width="200" x:Name="searchComboBox" SelectionChanged="searchComboBox_SelectionChanged" DisplayMemberPath="aa"/>
        </StackPanel>

        <DataGrid x:Name="historyDataGrid" Grid.Row="2" Margin="5" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header=""
            </DataGrid.Columns>
        </DataGrid>

        <WindowsFormsHost Grid.Row="2" Grid.Column="1">
            <wfc:Chart x:Name="columnGetChart"/>
        </WindowsFormsHost>

        <!--<WindowsFormsHost Grid.Row="0" Grid.Column="1">
            <wfc:Chart x:Name="columnGetChart"/>
        </WindowsFormsHost>-->

    </Grid>
</Window>
