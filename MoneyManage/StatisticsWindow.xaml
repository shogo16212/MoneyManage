<Window x:Class="MoneyManage.StatisticsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyManage"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource Default}"
        Title="StatisticsWindow" Height="700" Width="1200"
        xmlns:wfc="clr-namespace:System.Windows.Forms.DataVisualization.Charting;assembly=System.Windows.Forms.DataVisualization">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <Image Source="/images/icon.png" Height="50" Margin="5" HorizontalAlignment="Left"/>

        <TextBlock Margin="5" Grid.Column="1" HorizontalAlignment="Right" x:Name="loginUserTextBlock"/>

        <Button Grid.Row="1" Margin="5" HorizontalAlignment="Right" x:Name="backButton" Click="backButton_Click" Content="戻る" Width="100" Grid.Column="1"/>
        <WindowsFormsHost Grid.Row="2" Grid.ColumnSpan="2">
            <wfc:Chart x:Name="columnChart"/>
        </WindowsFormsHost>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="5" Grid.Row="3" Grid.ColumnSpan="2">
            <TextBlock Text="対象ユーザー："/>
            <ComboBox Width="200" x:Name="searchComboBox" SelectionChanged="searchComboBox_SelectionChanged" DisplayMemberPath="UserName"/>
            <TextBlock Text="     対象年月："/>
            <ComboBox Width="200" x:Name="searchyearMonthComboBox" SelectionChanged="searchyearMonthComboBox_SelectionChanged" DisplayMemberPath="aa"/>

        </StackPanel>

        <DataGrid x:Name="historyDataGrid" Grid.Row="4" Margin="5" AutoGenerateColumns="False" IsReadOnly="True" SelectionMode="Single" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="日付" Binding="{Binding aa}"/>
                <DataGridTextColumn Header="カテゴリー" Binding="{Binding aa}"/>
                <DataGridTextColumn Header="料金" Binding="{Binding aa}"/>
                <DataGridTextColumn Header="備考" Binding="{Binding aa}" Width="*"/>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="4" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock x:Name="titleTextBlock" Margin="5"/>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="支出合計" Width="100"/>
                <TextBlock x:Name="expenTextBlock" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="収入合計" Width="100"/>
                <TextBlock x:Name="incomeTextBlock" Width="200"/>
            </StackPanel>

        </StackPanel>

        <!--<WindowsFormsHost Grid.Row="3" Margin="5" Grid.Column="1">
            <wfc:Chart x:Name="columnGetChart"/>
        </WindowsFormsHost>-->

        <!--<WindowsFormsHost Grid.Row="0" Grid.Column="1">
            <wfc:Chart x:Name="columnGetChart"/>
        </WindowsFormsHost>-->

    </Grid>
</Window>
