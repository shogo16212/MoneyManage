<Window x:Class="MoneyManage.UserRegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyManage"
        mc:Ignorable="d"
                WindowStartupLocation="CenterScreen"
        Style="{StaticResource Default}"

        Title="UserRegisterWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Image Source="/images/icon.png" Height="50" Margin="5" HorizontalAlignment="Left"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="ユーザー名：" Width="150"/>
                <TextBox x:Name="nameTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="パスワード：" Width="150"/>
                <PasswordBox x:Name="passBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="10">
                <TextBlock Text="パスワード（確認）：" Width="150"/>
                <PasswordBox x:Name="cPassBox" Width="200"/>
            </StackPanel>
            <CheckBox  x:Name="adminCheckBox" Content="管理者" Margin="10" HorizontalAlignment="Center"/>
        </StackPanel>

        <StackPanel HorizontalAlignment="Center" Orientation="Horizontal" Grid.Row="2">
            <Button x:Name="submitButton" Click="submitButton_Click" Content="登録" Margin="10" Width="100"/>
            <Button x:Name="cancelButton" Click="cancelButton_Click" Content="登録" Margin="10" Width="100" Background="{StaticResource White}" Foreground="{StaticResource Primary}"/>
        </StackPanel>
    </Grid>
</Window>
