<Window x:Class="MoneyManage.SubmitWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyManage"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource Default}"
        Title="SubmitWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>

        <Image Source="/images/icon.png" Height="50" Margin="5" HorizontalAlignment="Left"/>

        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="日付" Width="100" VerticalAlignment="Center"/>
                <DatePicker Width="200" x:Name="datePicker"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="タイプ" Width="100" VerticalAlignment="Center"/>
                <ComboBox Width="200" x:Name="typeComboBoxr" DisplayMemberPath="EntoriesName" SelectionChanged="typeComboBoxr_SelectionChanged"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="カテゴリー" Width="100" VerticalAlignment="Center"/>
                <ComboBox Width="200" x:Name="categoryComboBoxr" DisplayMemberPath="CategoryName"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="金額" Width="100" VerticalAlignment="Center"/>
                <TextBox Width="200" x:Name="amountTextBox"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="詳細" Width="100" VerticalAlignment="Center"/>
                <TextBox Width="200" x:Name="memoTextBox"/>
        </StackPanel>

        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="2">
            <Button x:Name="submitButton" Click="submitButton_Click" Content="登録" Margin="5" Width="100"/>
            <Button x:Name="cancelButton" Click="cancelButton_Click" Content="キャンセル" Margin="5" Width="100" Background="{StaticResource White}" Foreground="{StaticResource Primary}"/>
        </StackPanel>
    </Grid>
</Window>
