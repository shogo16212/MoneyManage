<Window x:Class="MoneyManage.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MoneyManage"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        Style="{StaticResource Default}"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Image Source="/images/icon.png" Height="50" Margin="5" HorizontalAlignment="Left"/>

        <StackPanel Grid.Row="1" HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="ユーザー名：" Width="150"/>
                <TextBox x:Name="nameTextBox" Width="200"/>
            </StackPanel>
            <StackPanel Orientation="Horizontal" Margin="5">
                <TextBlock Text="パスワード：" Width="150"/>
                <PasswordBox x:Name="passBox" Width="200"/>
            </StackPanel>

            <Button HorizontalAlignment="Center" Click="loginButton_Click" Margin="5" Content="ログイン" x:Name="loginButton"/>

        </StackPanel>
    </Grid>
</Window>
